// Глва_3_Задача_8.cpp
#include<iostream>
#include<locale.h>

int main()
{
	float xz1;
	double xz2;
	int xz3;
	using std::cin;
	using std::cout;
	using std::endl;
	cout << "8 * 9 + 2 = " << 8 * 9 + 2 << endl;
	cout << "6 * 3 / 4 = " << 6 * 3 / 4 << endl;
	xz1 = 3.0 / 4.0 * 6.0;
	xz2 = 3.0 / 4.0 * 6.0;
	xz3 = 3 / 4 * 6;
	cout << "float 3 / 4 * 6 = " << xz1 << endl;
	cout << "double 3 / 4 * 6 = " << xz2 << endl;
	cout << "int 3 / 4 * 6 = " << xz3 << endl;
	cout << "6 * 3 / 4 = " << 6 * 3 / 4 << endl;
	cout << "15 % 4 = " << 15 % 4 <<endl;
	cin.get();
	cin.get();
	return 0;
}
